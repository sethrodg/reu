<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ComposeAreaWrapper">
        <item name="android:background">@color/compose_background</item>
    </style>
    <style name="ComposeScrollView" />
    <style name="DrawerHeaderItemStyle">
        <item name="android:paddingStart">@dimen/folder_list_item_padding_side_tablet</item>
        <item name="android:paddingEnd">@dimen/folder_list_item_padding_side</item>
    </style>
    <style name="GmailifyHeader">
        <item name="sudBackgroundTile">@color/gmailify_background_tile</item>
        <item name="sudIllustrationHorizontalTile">@drawable/gmailify_header_repeat_tablet</item>
        <item name="sudIllustrationImage">@drawable/gmailify_header_main_tablet</item>
    </style>
    <style name="HatsSurveyHolder">
        <item name="android:layout_gravity">start|bottom|center</item>
        <item name="android:layout_width">@dimen/hats_holder_width_tablet</item>
    </style>
    <style name="RecipientEditTextView" parent="@style/RecipientEditTextViewBase">
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="RichTextToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/compose_rich_text_toolbar_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/compose_rich_text_toolbar_margin_end</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="SetupWizardHeaderStyle">
        <item name="sudBackgroundTile">@drawable/ic_suw_bg_tile</item>
        <item name="sudIllustrationHorizontalTile">@drawable/ic_suw_bg_header_tile</item>
        <item name="sudIllustrationImage">@drawable/ic_suw_tablet_header_01</item>
    </style>
    <style name="SnackBar.Text.Action.Material.SingleLine" parent="@style/SnackBar.Text.Action.Material">
        <item name="android:maxWidth">190.0dip</item>
    </style>
    <style name="VacationResponderTheme" parent="@style/UnifiedEmailTheme.Appcompat">
        <item name="android:windowBackground">@color/compose_background</item>
    </style>
    <style name="WelcomeTour.Container" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/welcome_tour_container_width</item>
        <item name="android:layout_height">@dimen/welcome_tour_container_height</item>
    </style>
    <style name="WelcomeTour.ContentArea" parent="@style/WelcomeTour">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingStart">@dimen/welcome_tour_content_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/welcome_tour_content_padding_horizontal</item>
    </style>
    <style name="WelcomeTour.ImageArea" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_marginTop">@dimen/welcome_tour_image_margin_top</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>
    <style name="og_popover_style">
        <item name="android:layout_marginTop">@dimen/account_menu_popover_top_margin</item>
        <item name="layout_constraintHeight_max">@dimen/account_menu_popover_max_height</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
</resources>
