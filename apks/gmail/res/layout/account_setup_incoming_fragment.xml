        <android.support.design.textfield.TextInputEditText android:id="@id/imap_path_prefix" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" style="@style/AccountSetupTextInputEditText" />
    </android.support.design.textfield.TextInputLayout>
