    <com.android.email.activity.setup.AuthenticationView android:id="@id/authentication_view" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <include android:id="@id/client_certificate_selector" android:visibility="gone" layout="@layout/client_certificate_selector" />
    <include layout="@layout/device_details" />
    <android.support.design.textfield.TextInputLayout android:theme="@style/Theme.GoogleMaterial.Light.Bridge.TextField" android:id="@id/account_server_wrapper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/account_setup_server_label" style="@style/SudGmailTextInputLayoutBottomMargin">
        <android.support.design.textfield.TextInputEditText android:id="@id/account_server" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textUri" style="@style/AccountSetupTextInputEditText.Disableable" />
    </android.support.design.textfield.TextInputLayout>
    <android.support.design.textfield.TextInputLayout android:theme="@style/Theme.GoogleMaterial.Light.Bridge.TextField" android:id="@id/account_port_wrapper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/account_setup_port_label" style="@style/SudGmailTextInputLayoutBottomMargin">
        <android.support.design.textfield.TextInputEditText android:id="@id/account_port" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="number" style="@style/AccountSetupTextInputEditText.Disableable" />
