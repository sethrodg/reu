            <TextView android:id="@id/t4_detail_priority_label" android:text="@string/t4_edit_segment_priority_label" android:layout_alignParentStart="true" style="@style/Tasks.Detail.BodyBase.Body" />
            <TextView android:id="@id/t4_detail_priority_text" android:layout_alignParentEnd="true" style="@style/Tasks.Detail.BodyBase.Body" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:id="@id/t4_detail_body" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Tasks.Detail.Item">
        <ImageView android:layout_gravity="top" app:srcCompat="@drawable/quantum_gm_ic_notes_vd_theme_24" style="@style/Tasks.Detail.Icon" />
        <TextView android:autoLink="all" android:id="@id/t4_detail_body_text" style="@style/Tasks.Detail.BodyBase.Body" />
    </LinearLayout>
    <LinearLayout android:id="@id/t4_view_conversation" android:background="?selectableItemBackground" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Tasks.Detail.Item">
        <ImageView app:srcCompat="@drawable/quantum_gm_ic_email_vd_theme_24" style="@style/Tasks.Detail.Icon" />
        <TextView android:text="@string/t4_view_conversation" style="@style/Tasks.Detail.BodyBase.Body" />
    </LinearLayout>
</LinearLayout>