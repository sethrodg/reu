<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="datetime_menuOptionDetail">
        <item name="android:textSize">@dimen/datetimepicker_grid_menu_option_detail_text_size</item>
        <item name="android:textColor">@color/datetimepicker_faint_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/sans_serif</item>
    </style>
    <style name="datetime_menuOptionTitle">
        <item name="android:textSize">@dimen/datetimepicker_grid_menu_option_title_text_size</item>
        <item name="android:textColor">@color/datetimepicker_dark_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/sans_serif</item>
    </style>
    <style name="snooze_menuOptionDetail">
        <item name="android:textSize">@dimen/snooze_grid_menu_option_detail_text_size</item>
        <item name="android:textColor">@color/snooze_faint_text</item>
        <item name="android:layout_marginTop">@dimen/snooze_grid_menu_option_detail_margin_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/sans_serif</item>
    </style>
    <style name="snooze_menuOptionTile">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="snooze_menuOptionTitle">
        <item name="android:textSize">@dimen/snooze_grid_menu_option_title_text_size</item>
        <item name="android:textColor">@color/snooze_dark_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/sans_serif</item>
    </style>
</resources>
