    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_grey_pressed_color" />
            <corners android:radius="@dimen/conversation_footer_button_corner_radius" />
            <stroke android:width="@dimen/conversation_footer_button_stroke_width" android:color="@color/hairline_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/general_background" />
            <corners android:radius="@dimen/conversation_footer_button_corner_radius" />
            <stroke android:width="@dimen/conversation_footer_button_stroke_width" android:color="@color/hairline_color" />
        </shape>
    </item>
</selector>